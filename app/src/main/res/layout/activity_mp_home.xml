<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MP_Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navbar"
            style="@style/BottomNavBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/bottom_nav_menu" />

        <ScrollView
            android:id="@+id/vscrollBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navbar"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_default_gray">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBannerCard"
                    style="@style/CardViewStyle3">

                    <com.denzcoskun.imageslider.ImageSlider

                        android:id="@+id/imageSliderBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:iss_auto_cycle="true"
                        app:iss_period="3000" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvNewProducts"
                    style="@style/TVFontStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvBannerCard"
                    android:layout_margin="10dp"
                    android:text="@string/home6"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/ll_newProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNewProducts"
                    android:background="@drawable/bg_default_white"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivNewProd1"
                        style="@style/ImageViewStyle1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivNewProd2"
                        style="@style/ImageViewStyle2"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/ivNewProd1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivNewProd3"
                        style="@style/ImageViewStyle2"
                        android:layout_below="@id/ivNewProd2"
                        android:layout_toEndOf="@id/ivNewProd1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvFeaturedProduct"
                    style="@style/TVFontStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_newProducts"
                    android:layout_margin="10dp"
                    android:text="@string/home5"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/ll_FeatProd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFeaturedProduct"
                    android:background="@drawable/bg_default_white"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/ivFtProd1"
                        style="@style/ImageViewStyle1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivFtProd2"
                        style="@style/ImageViewStyle2"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@id/ivFtProd1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivFtProd3"
                        style="@style/ImageViewStyle2"
                        android:layout_below="@id/ivFtProd2"
                        android:layout_toEndOf="@id/ivFtProd1"
                        android:src="@drawable/home_placeholder"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCategory"
                    style="@style/TVFontStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_FeatProd"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/home1"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCategory"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />

                <RelativeLayout
                    android:id="@+id/rlSocialmedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recycler_categories"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/cu_facebook" />

                    <ImageView
                        android:id="@+id/ivInstagram"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/ivFacebook"
                        android:src="@drawable/cu_insta" />

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/ivInstagram"
                        android:src="@drawable/cu_twitter" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvMP"
                    style="@style/TVFontStyle4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/rlSocialmedia"
                    android:layout_marginBottom="5dp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textSize="15sp" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>