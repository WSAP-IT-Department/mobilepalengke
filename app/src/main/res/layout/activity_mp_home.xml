<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default_gray"
    android:orientation="vertical"
    tools:context=".MP_Home">

    <LinearLayout
        android:id="@+id/linearBody1"
        style="@style/LinearLayoutBody1">

        <ScrollView
            android:id="@+id/vscrollBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView style="@style/CardViewStyle3">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageSliderBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        app:iss_auto_cycle="true"
                        app:iss_period="3000" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linearProdCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_default_white"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/prod_category1" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/prod_category3" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/prod_category2" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBody2"
        style="@style/LinearLayoutBody2">

    </LinearLayout>

</LinearLayout>