                                        android:layout_height="match_parent">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="110dp"
                                            android:background="@drawable/img_border">

                                            <RadioButton
                                                android:id="@+id/radio2"
