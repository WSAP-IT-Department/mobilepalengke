<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp"
    tools:context=".MP_ForgotPassword2">

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo_text"
        android:layout_marginBottom="30dp" />

    <androidx.cardview.widget.CardView style="@style/CardViewStyle1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="30dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/txtForgotPassword1"
                android:text="@string/forgotpassword3"
                android:textAlignment="textStart"
                style="@style/TVFontStyle1" />

            <TextView
                android:id="@+id/txtForgotPassword2"
                android:text="@string/forgotpassword4"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:layout_marginBottom="40dp"
                style="@style/TVFontStyle2" />

            <EditText
                android:id="@+id/etCode"
                android:drawableStart="@drawable/ic_security"
                android:hint="@string/edittext4"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginBottom="10dp"
                style="@style/EditTextStyle1" />

            <Button
                android:id="@+id/btnRecoverPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="@string/btn4"
                style="@style/MaterialBtnStyle.Button1" />

            <TextView
                android:id="@+id/txtForgotPassword"
                android:focusable="false"
                android:text="@string/forgotpassword5"
                android:layout_marginTop="5dp"
                style="@style/TVFontStyle3" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>