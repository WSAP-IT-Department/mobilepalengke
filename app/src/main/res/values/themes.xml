<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobilepalengke" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mp_blue</item>
        <item name="colorPrimaryVariant">@color/mp_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mp_blue</item>
        <item name="colorSecondaryVariant">@color/mp_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="N">@color/mp_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Buttons Style - START -->
    <style name="MaterialBtnStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MaterialBtnStyle.Button1">
        <item name="backgroundTint">@color/mp_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialBtnStyle.Button2">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/mp_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="FlatButtonStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Text Views Font Style - START -->
    <style name="TVFontStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_black_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TVFontStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_black_regular</item>
    </style>

    <style name="TVFontStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TVFontStyle4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Text Views Font Style - END -->

    <!-- Edit Text Fields Style - START -->
    <style name="EditTextStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/et_userinput</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textColorHint">@color/mp_darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="background">@drawable/bg_default_white</item>
        <item name="backgroundTint">@color/mp_black_regular</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textColorHint">@color/mp_darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Edit Text Fields Style - END -->

    <!-- CardView Style - START -->
    <style name="CardViewStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="CardViewStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="CardViewStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>
    <!-- CardView Style - END -->

    <!-- Nav Bar Style - START -->
    <style name="NavBarReturnBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/nav_return</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NavBarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="BottomNavBarStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">?android:windowBackground</item>
        <item name="itemBackground">@color/mp_blue</item>
        <item name="itemIconTint">@drawable/nav_item_color_selected</item>
        <item name="itemTextColor">@color/mp_yellow</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    <!-- Nav Bar Style - END -->

    <!-- Linear Layout Style - START -->
    <style name="LinearLayoutBody1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">12</item>
        <item name="android:background">@drawable/bg_default_gray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutBody2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_default_nav_bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <!-- Linear Layout Style - END -->

    <!-- Tab Layout Style - START -->
    <style name="TabLayoutStyle1">
        <item name="android:background">@drawable/bg_default_white</item>
        <item name="tabIndicatorColor">@color/mp_blue</item>
        <item name="tabTextColor">@color/mp_darkgray</item>
        <item name="tabSelectedTextColor">@color/mp_black_title</item>
    </style>
    <!-- Tab Layout Style - END -->

    <!-- Image View Style - START -->
    <style name="ImageViewStyle1">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="ImageViewStyle2">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="ImageViewStyle3">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="circle_button1">
        <item name="android:background">@color/mp_red</item>
    </style>

    <!-- Relative Layout Style - START -->
    <style name="RelativeLayoutStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="elevation">5dp</item>
    </style>
    <!-- Relative Layout Style - END -->

</resources>