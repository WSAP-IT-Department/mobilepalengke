<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobilepalengke" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mp_blue</item>
        <item name="colorSecondaryVariant">@color/mp_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="N">@color/mp_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Buttons Style - START -->
    <style name="MaterialBtnStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MaterialBtnStyle.Button1">
        <item name="backgroundTint">@color/mp_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="MaterialBtnStyle.Button2">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/mp_blue</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="FlatButtonStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
 
    <!-- Text Views Font Style - START -->
    <style name="TVFontStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_black_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TVFontStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_black_regular</item>
    </style>

    <style name="TVFontStyle3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TVFontStyle4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mp_darkgray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Text Views Font Style - END -->

    <!-- Edit Text Fields Style - START -->
    <style name="EditTextStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/et_userinput</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textColorHint">@color/mp_darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="background">@drawable/bg_default_white</item>
        <item name="backgroundTint">@color/mp_black_regular</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textColorHint">@color/mp_darkgray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Edit Text Fields Style - END -->

    <!-- CardView Style - START -->
    <style name="CardViewStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="CardViewStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
    </style>
    <!-- CardView Style - END -->

    <!-- Nav Bar Style - START -->
    <style name="NavBarReturnBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/nav_return</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="NavBarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/mp_black_regular</item>
        <item name="android:textSize">30sp</item>
    </style>
    <!-- Nav Bar Style - END -->

    <!-- Tab Layout Style - Start -->
    <style name="TabLayoutStyle1">
        <item name="android:background">@drawable/bg_default_white</item>
        <item name="tabIndicatorColor">@color/mp_blue</item>
        <item name="tabTextColor">@color/mp_darkgray</item>
        <item name="tabSelectedTextColor">@color/mp_black_title</item>
    </style>
    <!-- Tab Layout Style - END -->

</resources>